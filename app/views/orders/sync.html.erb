<div class="card">
    <div class="card-content">
        <h1>All Unreviewed Orders</h1>
        <% if @orders.empty? %>
            <p>No orders to review</p>
        <% else %>
            <%= button_to( "Upload to Salesforce", upload_path(@orders), :method => :patch, class: 'waves-effect waves-light btn-small') %>
            <%= render :partial => "order_table"%>
        <% end %>
    </div>
</div>