<div class="card">
<div class="card-content">
<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Maximum Packs</th>
      <th>Quantity per Unit</th>
      <th>POS Transaction</th>
      <th>Carton SFID</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.max_packs %></td>
        <td><%= item.qty_per_unit %></td>
        <td><%= item.try(:pos_trans_id) || "NA" %></td>
        <td><%= item.try(:carton) || "NA" %></td>
        <td><%= item.active ? "Yes" : "No" %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>
</div>
</div>